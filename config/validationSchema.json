    "editProfile": {
        "header": {
            "type": "object",
            "properties": {
                "_token_": {
                    "type": "string",
                    "minLength" : 1
                },
                "_token_issuer_": {
                    "type": "number",
                    "enum": [0, 1]
                }
            },
            "required": ["_token_", "_token_issuer_"],
            "additionalProperties": false
        },
        "form_params": {
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string",
                    "title": "نام"
                },
                "lastName": {
                    "type": "string",
                    "title": "نام خانوادگی"
                },
                "nickName": {
                    "type": "string",
                    "minLength" : 1,
                    "title": "نام مستعار",
                    "description": "این نام در کل سیستم منحصر به فرد است"
                },
                "email": {
                    "type": "string",
                    "format" : "email",
                    "title": "ایمیل"
                },
                "phoneNumber": {
                    "type": "string",
                    "title": "شماره تلفن",
                    "pattern" : "\\d{6,14}",
                    "pattern_description": "شماره تلفن با پیش شماره وارد شود"
                },
                "cellphoneNumber": {
                    "type": "string",
                    "title": "شماره موبایل",
                    "pattern" : "^(0|\\+98|0098){1}[9]{1}[\\d]{9}$",
                    "pattern_description": "به صورت 09123456789 وارد شود"
                },
                "nationalCode": {
                    "type": "string",
                    "title": "کد ملی",
                    "description": "کد ملی 10 رقمی و بدون خط تیره و فاصله"
                },
                "gender": {
                    "type": "string",
                    "enum" : ["WOMAN_GENDER", "MAN_GENDER"],
                    "title": "جنسیت"
                },
                "address": {
                    "type": "string",
                    "title": "آدرس"
                },
                "birthDate": {
                    "type": "string",
                    "title": "تاریخ تولد به صورت شمسی",
                    "pattern": "[1][3-5][0-9]{2}\/([1-9]|0[1-9]|1[0-2])\/([1-2][0-9]|0[1-9]|3[0-1]|[1-9])",
                    "pattern_description": "به صورت yyyy/mm/dd"
                },
                "country": {
                    "type": "string",
                    "title": "نام کشور"
                },
                "state": {
                    "type": "string",
                    "title": "نام استان"
                },
                "city": {
                    "type": "string",
                    "title": "نام شهر"
                },
                "postalcode": {
                    "type": "string",
                    "title": "کد پستی",
                    "pattern" : "^(?!(\\d)\\\\1{3})[13-9]{4}[1346-9][013-9]{5}$",
                    "pattern_description": "شماره تلفن با پیش شماره وارد شود"
                },
                "sheba": {
                    "type": "string",
                    "pattern" : "^(\\d)(?!\\1{23}$)\\d{23}$",
                    "title": "کد شبا حساب بانکی",
                    "description": "شبا که به صورت عددی وارد می شود. (بدون IR)"
                },
                "profileImage": {
                    "type": "string",
                    "title": "تصویر پروفایل",
                    "description": "آدرس اینترنتی تصویر پروفایل که به صورت مستقیم در دسترس است"
                },
                "client_id": {
                    "type": "string",
                    "title": "شناسه کلاینت",
                    "description": "برای بروزرسانی client_metadata این پارامتر اجباری می باشد"
                },
                "client_secret": {
                    "type": "string",
                    "title": "کد دسترسی کلاینت",
                    "description": "برای بروزرسانی client_metadata این پارامتر اجباری می باشد"
                },
                "client_metadata": {
                    "type": "string",
                    "title": "SSO client_metadata"
                },
                "birthState": {
                    "type": "string",
                    "title": "استان محل تولد"
                },
                "identificationNumber": {
                    "type": "string",
                    "title": "شماره شناسنامه"
                },
                "fatherName": {
                    "type": "string",
                    "title": "نام پدر"
                },
                "scVoucherHash": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "scApiKey": {
                    "type": "string",
                    "title": "توکن برای فراخوانی سرویس کال"
                }
            },
            "required": ["nickName"],
            "additionalProperties": false
        }
    },

